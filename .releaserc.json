{
  "branches": [
    "main",
    {
      "name": "+([0-9])\\.+([0-9])-rc",
      "prerelease": "rc",
      "channel": "rc"
    },
    {
      "name": "+([0-9])\\.+([0-9])\\.x-maintenance",
      "channel": "${name}",
      "range": "$1.$2.x"
    }
  ],
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    "@semantic-release/changelog",
    [
      "@semantic-release/exec",
      {
        "prepareCmd": "./.github/scripts/mk-release-package.sh --version ${nextRelease.version} --package firebolt-cpp-transport"
      }
    ],
    [
      "@semantic-release/github",
      {
        "assets": [
          { "path": "build/firebolt-cpp-transport-*.tar.gz", "label": "Source Code (tar.gz)" }
        ]
      }
    ]
  ]
}
